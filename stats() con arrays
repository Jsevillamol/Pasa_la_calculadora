typedef int tInforme[4];

void actualizaInf(tInforme act);

main() {

	tInforme inf;
	for (int i = 0; i < 4; i++)
	{
		inf[1] = 0;
		
		inf[0]++;
	}
		
		actualizaInf(inf);

}

void actualizaInf(tInforme inf) {

	tInforme inf;
	// apertura y lectura del archivo
	
		for (int i = 0; i < 4, i++)	datos >> inf[i];
		
		for (int i = 0; i < 4; i++) datos << inf[i] + act [i];
	
}
